@model IEnumerable<ProgTest.Models.ClaimApprovalViewModel>

@{
    ViewData["Title"] = "Claim Tracker";
}

<div class="container my-5">
    <!-- Container with margin for spacing -->
    <h2 class="text-center display-4 mb-4">Claim Tracker</h2> <!-- Larger and more stylish heading -->

    <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered shadow-sm" style="background-color: #f9f9f9;">
            <!-- Hover effect, striped rows, and slight shadow for better aesthetics -->
            <thead class="thead-dark">
                <!-- Dark header for better contrast -->
                <tr>
                    <th>Lecturer Name</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Total Amount</th>
                    <th>Claim Date</th>
                    <th>Is Submitted</th>
                    <th>Approver Role</th>
                    <th>Is Approved</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-middle">
                        <!-- Centered content and hoverable rows -->
                        <td>@item.LecturerName</td>
                        <td>@item.HoursWorked</td>
                        <td>@item.HourlyRate</td>
                        <td>@item.TotalAmount</td>
                        <td>@item.ClaimDate.ToString("yyyy/MM/dd")</td>
                        <td>@(item.IsSubmitted ? "Yes" : "No")</td>
                        <td>@item.ApproverRole</td>
                        <td>@(item.IsApproved ? "Yes" : "No")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@model ProgTest.Models.ProgrammeCoordinator

@{
    ViewData["Title"] = "Delete";
}

<div class="container text-center">
    <!-- Centered container for better alignment -->
    <h1 class="my-4">Delete</h1> <!-- Added margin for spacing -->
    <h3 class="text-danger">Are you sure you want to delete this?</h3> <!-- Changed text color to red for emphasis -->

    <div class="mt-4">
        <!-- Added margin-top for spacing -->
        <h4>Programme Coordinator</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2 font-weight-bold">
                <!-- Added bold styling -->
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FullName)
            </dd>
            <dt class="col-sm-2 font-weight-bold">
                <!-- Added bold styling -->
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2 font-weight-bold">
                <!-- Added bold styling -->
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" class="mt-4">
        <!-- Added margin-top for spacing -->
        <input type="hidden" asp-for="CoordinatorId" />
        <input type="submit" value="Delete" class="btn btn-danger btn-lg" /> <!-- Made Delete button larger -->
        <a asp-action="Index" class="btn btn-secondary">Back to List</a> <!-- Styled Back button -->
    </form>
</div>

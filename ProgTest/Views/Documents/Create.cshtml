@model ProgTest.Models.Document

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1 class="my-4 text-center">Create Document</h1>
    <h4 class="text-center">Upload New Document</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label>File Name</label>
                    <p class="form-control-static">@Model.FileName</p>
                    <span asp-validation-for="FileName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Upload Document</label>
                    <input type="file" name="file" class="form-control" required />
                    <span asp-validation-for="File" class="text-danger"></span> <!-- Add validation for the file input -->
                </div>

                <div class="form-group">
                    <label asp-for="ClaimId" class="control-label"></label>
                    <select asp-for="ClaimId" class="form-control" asp-items="ViewBag.ClaimId"></select>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

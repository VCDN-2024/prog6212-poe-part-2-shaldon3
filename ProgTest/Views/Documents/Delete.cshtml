@model ProgTest.Models.Document

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <!-- Centered container for better layout -->
    <h1 class="my-4 text-center text-danger">Delete Document</h1> <!-- Centered title with emphasis -->

    <h3 class="text-center">Are you sure you want to delete this?</h3> <!-- Centered question -->
    <div>
        <h4 class="text-center">Document Details</h4> <!-- Centered subheading -->
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.FileName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FileName)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.FilePath)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FilePath)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.FileSize)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FileSize)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.UploadedDate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.UploadedDate)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Claim)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Claim.LecturerName)
            </dd>
        </dl>

        <form asp-action="Delete" class="text-center">
            <!-- Centering the form -->
            <input type="hidden" asp-for="DocumentId" />
            <button type="submit" class="btn btn-danger btn-lg">Delete</button> <!-- Larger button for emphasis -->
            <span class="mx-2">|</span> <!-- Spacer -->
            <a asp-action="Index" class="btn btn-secondary">Back to List</a> <!-- Styled link as a button -->
        </form>
    </div>
</div>

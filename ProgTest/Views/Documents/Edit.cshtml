@model ProgTest.Models.Document

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <!-- Centered container for better layout -->
    <h1 class="my-4 text-center">Edit Document</h1> <!-- Centered title with margin -->

    <h4 class="text-center">Document Details</h4> <!-- Centered subheading -->
    <hr />

    <div class="row justify-content-center">
        <!-- Centering the form in the row -->
        <div class="col-md-6">
            <!-- Increased column size for better form display -->
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div> <!-- Margin below validation summary -->

                <input type="hidden" asp-for="DocumentId" />

                <div class="form-group">
                    <label asp-for="FileName" class="control-label"></label>
                    <input asp-for="FileName" class="form-control" placeholder="Enter file name" /> <!-- Added placeholder for clarity -->
                    <span asp-validation-for="FileName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FilePath" class="control-label"></label>
                    <input asp-for="FilePath" class="form-control" placeholder="Enter file path" /> <!-- Added placeholder for clarity -->
                    <span asp-validation-for="FilePath" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FileSize" class="control-label"></label>
                    <input asp-for="FileSize" class="form-control" placeholder="Enter file size" /> <!-- Added placeholder for clarity -->
                    <span asp-validation-for="FileSize" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UploadedDate" class="control-label"></label>
                    <input asp-for="UploadedDate" class="form-control" placeholder="Enter uploaded date" /> <!-- Added placeholder for clarity -->
                    <span asp-validation-for="UploadedDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ClaimId" class="control-label"></label>
                    <select asp-for="ClaimId" class="form-control" asp-items="ViewBag.ClaimId"></select>
                    <span asp-validation-for="ClaimId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary btn-block" /> <!-- Block button for better appearance -->
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <!-- Centered back link with margin -->
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

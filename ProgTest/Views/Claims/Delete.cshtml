@model ProgTest.Models.Claim

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <!-- Centered container for better layout -->
    <h1 class="my-4 text-center">Delete Claim</h1> <!-- Centered title with margin -->

    <h3 class="text-danger text-center">Are you sure you want to delete this?</h3> <!-- Centered danger message -->
    <div>
        <h4 class="text-center">Claim Details</h4> <!-- Centered subtitle -->
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.LecturerName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.LecturerName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.HoursWorked)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.HoursWorked)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.HourlyRate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.HourlyRate)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ClaimDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ClaimDate)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.IsSubmitted)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.IsSubmitted)
            </dd>
        </dl>

        <div class="text-center mt-4">
            <!-- Centered action buttons -->
            <form asp-action="Delete" class="d-inline">
                <!-- Keeps form inline -->
                <input type="hidden" asp-for="ClaimId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> <!-- Red delete button -->
            </form>
            <span class="mx-2">|</span>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a> <!-- Styled back button -->
        </div>
    </div>
</div>
